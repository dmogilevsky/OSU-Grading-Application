<h1>Add Section</h1>
<% if current_user.admin? %>
  <p>Update the course information below.</p>

  <%= form_with(model: Section.new) do |form| %>

    <div class="field">
      <%= form.label :CourseID %>
      <%= form.number_field :CourseID %>
    </div>

    <div class="field">
      <%= form.label :SectionNumber %>
      <%= form.number_field :SectionNumber %>
    </div>

    <div class="field">
      <%= form.label :Term %>
      <%= form.text_field :Term %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
<% else %>
  <p>You have to be an admin to add a course.</p>
<% end %>