<h1>Pages#course overview</h1>

<p>Courses</p>


<div style="overflow-x:auto">
  <table>
    <thead>
    <tr>
      <th>Id</th>
      <th>Subject</th>
      <th>CourseNumber</th>
      <th>CourseName</th>
      <th>Campus</th>
      <th>Career</th>
      <th>Section</th>
    </tr>
    </thead>

    <tbody>
    <% @courses.each do |course| %>
      <% course_id = course.id %>
      <tr>
        <td><%= course.id %></td>
        <td><%= course.Subject %></td>
        <td><%= course.CourseNumber %></td>
        <td><%= course.CourseName %></td>
        <td><%= course.Campus %></td>
        <td><%= course.Career %></td>
      </tr>

      <% Section.where(["course_id = ?", course_id]).each do |section| %>
        <tr>
          <td><%= section.SectionNumber%></td>
          <td><%= section.Term %></td>
        </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>
</div>


<%== pagy_nav(@pagy) %>