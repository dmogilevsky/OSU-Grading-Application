<h1>Add Course</h1>
<% if current_user.admin? %>
  <p>Update the course information below.</p>

  <%= form_with(model: Course.new) do |form| %>
    <div class="field">
      <%= form.label :Subject %>
      <%= form.text_field :Subject %>
    </div>

    <div class="field">
      <%= form.label :CourseNumber, 'Course Number'%>
      <%= form.number_field :CourseNumber %>
    </div>

    <div class="field">
      <%= form.label :CourseName, 'Course Name'%>
      <%= form.text_field :CourseName %>
    </div>

    <div class="field">
      <%= form.label :Campus%>
      <%= form.text_field :Campus %>
    </div>

    <div class="field">
      <%= form.label :Career %>
      <%= form.text_field :Career %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
<% else %>
  <p>You have to be an admin to add a course.</p>
<% end %>