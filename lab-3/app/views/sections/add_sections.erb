<h1>Add Section</h1>
<% if current_user.admin? and current_user.approved %>
  <p>Find a Course ID from the courses page to add the section to.</p>

  <%= form_with(model: Section.new) do |form| %>

    <div class="field">
      <%= form.label :CourseID, 'Corresponding Course ID'%>
      <%= form.number_field :CourseID %>
    </div>

    <div class="field">
      <%= form.label :SectionNumber, 'Section Number'%>
      <%= form.number_field :SectionNumber %>
    </div>

    <div class="field">
      <%= form.label :Term %>
      <%= form.text_field :Term %>
    </div>

    <div class="field">
      <%= form.label :MaxGraders, 'MaxGraders'%>
      <%= form.number_field :MaxGraders %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
<% else %>
  <p>You have to be an admin to add a course.</p>
<% end %>
